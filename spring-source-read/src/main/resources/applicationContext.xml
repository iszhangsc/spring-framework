<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath*:xbeanA.properties</value>
			</list>
		</property>
	</bean>
	<bean id="xbeanA" class="com.source.read.xml.bean.XBeanA" >
		<property name="name" value="${xbeanA.name}" />
		<property name="age" value="${xbeanA.age}" />
	</bean>
	<bean id="xbeanB" class="com.source.read.xml.bean.XBeanB" />
</beans>